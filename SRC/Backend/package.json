{
  "name": "fruna-backend",
  "version": "1.0.0",
  "description": "Backend para Supermercado FRUNA",
  "main": "server.js",
  "prisma": { "schema": "./db/prisma/schema.prisma" },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node test-security.js",
    "seed": "node scripts/seed.js",
    "setup": "npm install && npm run seed",
    "fill-data": "npm run seed",
    "prisma:validate": "dotenv -e ./.env -- prisma validate",
    "prisma:pull":     "dotenv -e ./.env -- prisma db pull",
    "prisma:generate": "dotenv -e ./.env -- prisma generate",
    "prisma:studio":   "dotenv -e ./.env -- prisma studio"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "fruna",
    "supermercado",
    "backend",
    "api",
    "security"
  ],
  "author": "Grupo Los Comprimidos",
  "license": "MIT"
}
