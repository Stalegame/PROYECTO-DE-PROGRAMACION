{
  "name": "fruna-backend",
  "version": "3.0.1",
  "description": "Backend para Supermercado FRUNA",
  "prisma": {
    "schema": "src/backend/db/prisma/schema.prisma"
  },
  "scripts": {
    "dev": "nodemon",
    "seed": "node src/backend/scripts/seed.js",
    "seed:test": "cross-env NODE_ENV=test node src/backend/scripts/seed.js",
    "prisma:generate": "dotenv -e ./.env -- prisma generate",
    "init_server": "npm install && npx prisma generate && npx prisma db push",
    "init_server_ci": "npm ci && npx prisma generate && npx prisma db push",
    "seed:force": "cross-env FORCE_SEED=true node src/backend/scripts/seed.js",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --runInBand",
    "db:push:test": "dotenv -e .env.test -- prisma db push --schema=src/backend/db/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "eslint": "^9.39.0",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "dotenv-cli": "^10.0.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.17.1",
    "supertest": "^7.1.4"
  },
  "keywords": [
    "fruna",
    "supermercado",
    "backend",
    "api",
    "security"
  ],
  "author": "Grupo Los Comprimidos",
  "license": "MIT"
}
