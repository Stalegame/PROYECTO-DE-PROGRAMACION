{
  "name": "fruna-backend",
  "version": "2.1.0",
  "description": "Backend para Supermercado FRUNA",
  "prisma": {
    "schema": "src/backend/db/prisma/schema.prisma"
  },
  "scripts": {
    "dev": "nodemon src/backend/server.js",
    "seed": "node src/backend/scripts/seed.js",
    "prisma:generate": "dotenv -e ./.env -- prisma generate",
    "init_server": "npm install && npx prisma generate && npx prisma db push && node src/backend/scripts/seed.js",
    "init_server_ci": "npm ci && npx prisma generate && npx prisma db push && node src/backend/scripts/seed.js"
  },
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "eslint": "^9.39.0",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "dotenv-cli": "^10.0.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.17.1"
  },
  "keywords": [
    "fruna",
    "supermercado",
    "backend",
    "api",
    "security"
  ],
  "author": "Grupo Los Comprimidos",
  "license": "MIT"
}
